{
	"compilerOptions": {
		"target": "ES2018",
    "module": "commonjs",
    "jsx": "preserve",
		"declaration": true,
    "outDir": "./",
    "declarationDir": "./src",
		"strict": true,
		"esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
